          F_pointers.insert(I);
        }
      }
      AA = &getAnalysis<AAResultsWrapperPass>(F).getAAResults();
      size_t n = F_pointers.size();
        
      Value* p[2];
      for (unsigned i = 0; i < n; ++i) {
        p[0] = F_pointers[i];
        for (unsigned j = i + 1; j < n; ++j) {
          p[1] = F_pointers[j];
          switch (AA->alias(p[0], p[1])) {
            case MayAlias:
            case PartialAlias:
            case MustAlias:
                        // union-find
              this->sets->unionfind(p[0], p[1]);
              if (Pairwise) {
